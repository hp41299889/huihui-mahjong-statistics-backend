{
  "name": "huihui-mahjong-statistics-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.ts",
  "scripts": {
    "start": "node -r ./build/register-tsconfig-paths ./build/index.js",
    "build": "rm -rf build && tsc",
    "dev": "nodemon -r tsconfig-paths/register index.ts",
    "typeorm": "typeorm-ts-node-commonjs -d ./databases/postgres/postgres.ts",
    "migration:generate": "npm run typeorm migration:generate ./databases/postgres/migrations/migration",
    "migration:run": "npm run typeorm migration:run",
    "migration:revert": "npm run typeorm migration:revert",
    "docker:build": "npm run build && docker build -t hp4129889/huihui-mahjong:backend .",
    "docker:push": "docker push hp4129889/huihui-mahjong:backend",
    "dockerhub": "npm run build && npm run docker:build && npm run docker:push",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "lodash": "^4.17.21",
    "pg": "^8.10.0",
    "typeorm": "^0.3.11",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/lodash": "^4.14.191",
    "nodemon": "^2.0.21",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.5"
  }
}